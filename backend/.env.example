# FastAPI application configuration
APP_NAME=CostCourter
ENVIRONMENT=local
DEBUG=true
BASE_URL=http://localhost:8000
TIMEZONE=UTC
AUTH_BYPASS=true

# PostgreSQL connection
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=costcourter
POSTGRES_USER=costcourter
POSTGRES_PASSWORD=change-me

# Redis broker/cache configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_POOL_MAX_CONNECTIONS=200
# REDIS_USERNAME=
# REDIS_PASSWORD=

# Security / auth
JWT_SECRET_KEY=change-me-please
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Development: bypass API auth (do not enable outside local dev)
# AUTH_BYPASS=false

# External services
SCRAPER_BASE_URL=http://scraper:3000
SEARXNG_URL=http://searxng:8080/search
SCRAPER_REQUEST_TIMEOUT=30.0
SCRAPER_CONNECT_TIMEOUT=30.0
PRICE_FETCH_CHUNK_SIZE=25

# SMTP outbound mail (optional)
# SMTP_HOST=
# SMTP_PORT=587
# SMTP_USERNAME=
# SMTP_PASSWORD=
# SMTP_FROM_ADDRESS=
# SMTP_FROM_NAME=

# OIDC SSO integration (optional)
# OIDC SSO integration (optional)
# OIDC_CLIENT_ID=
# OIDC_CLIENT_SECRET=
# OIDC_AUTHORIZATION_ENDPOINT=
# OIDC_TOKEN_ENDPOINT=
# OIDC_USERINFO_ENDPOINT=
# OIDC_REDIRECT_URI=
# When setting scopes, use JSON array format, e.g. ["openid","email","profile"]
# OIDC_SCOPES=["openid","email","profile"]
OIDC_STATE_TTL_SECONDS=300

# Passkey / WebAuthn relying party (optional)
# Passkey / WebAuthn relying party (optional)
# PASSKEY_RELYING_PARTY_ID=
PASSKEY_RELYING_PARTY_NAME=CostCourter
# PASSKEY_ORIGIN=
PASSKEY_CHALLENGE_TTL_SECONDS=300
PASSKEY_TIMEOUT_MS=60000

# Notification integrations (optional; configure per feature)
# Notification integrations (optional)
NOTIFY_EMAIL_ENABLED=false
# NOTIFY_PUSHOVER_TOKEN=
# NOTIFY_PUSHOVER_USER=
# NOTIFY_GOTIFY_URL=
# NOTIFY_GOTIFY_TOKEN=
# APPRISE_CONFIG_PATH=

# Celery settings
CELERY_BEAT_SCHEDULE_PATH=config/celery_schedule.json
CELERY_WORKER_CONCURRENCY=1

# Feature toggles / caches
SEARCH_CACHE_TTL_SECONDS=600
AUDIT_LOG_PURGE_DAYS=90

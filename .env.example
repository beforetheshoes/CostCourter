# Root environment configuration for CostCourter
# Copy this file to `.env` (replacing the existing directory, if any) before running the stack.

# Database
POSTGRES_HOST=127.0.0.1
POSTGRES_PORT=5432
POSTGRES_DB=costcourter
POSTGRES_USER=costcourter
POSTGRES_PASSWORD=change-me

# Redis broker/cache
REDIS_HOST=127.0.0.1
REDIS_PORT=6379

# External services
SCRAPER_BASE_URL=http://localhost:3000
SEARXNG_URL=http://localhost:8080/search
SEARXNG_SECRET_KEY=change-me

# Auth / security
JWT_SECRET_KEY=change-me-please
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# FastAPI application defaults
APP_NAME=CostCourter
ENVIRONMENT=local
DEBUG=true
BASE_URL=http://localhost:8000
TIMEZONE=UTC

# Celery configuration
CELERY_BEAT_SCHEDULE_PATH=backend/config/celery_schedule.json
CELERY_WORKER_CONCURRENCY=1

# Feature toggles
SEARCH_CACHE_TTL_SECONDS=600
AUDIT_LOG_PURGE_DAYS=90
